            margin-right: 10px;
        }
        .comment-action {
            cursor: pointer;
            color: rgb(174, 35, 27);
        }
        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }
        .pagination button {
            padding: 10px 20px;
            margin: 0 5px;
            border: none;
            background-color: rgb(174, 35, 27);
            color: white;
            border-radius: 5px;
            cursor: pointer;
        }
        .pagination button:hover {
            background-color: rgb(200, 50, 50);
        }
        .pagination button:disabled {
            background-color: grey;
            cursor: default;
        }
    </style>
</head>
